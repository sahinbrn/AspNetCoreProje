@using EntityLater.Concrete
@model List<Services>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<!-- Light table -->
<div class="table-responsive" style="width: 100%;">
    <table class="table align-items-center table-flush" style="width: 100%;">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ServiceID
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a></td>
                    <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-light">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Service/AddService/" class="btn btn-primary">Yeni Hizmet Ekle</a>
</div>