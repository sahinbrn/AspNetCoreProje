@model EntityLater.Concrete.Experiences
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using(Html.BeginForm("AddExperience","Experience",FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                 <p class="card-description"> Yeni Deneyim Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Name" >
                    </div>
                    <div class="form-group">
                        <label >Tarih</label>
                        <input type="text" class="form-control" name="Date" >
                    </div>
                    <div class="form-group">
                        <label >Görsel Url</label>
                        <input  class="form-control" name="ImageUrl" >
                    </div>
                  
                    <div class="form-group">
                        <label >Açıklama</label>
                        <textarea class="form-control" name="Description" rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    @Html.ActionLink("İptal", "Index", "Experience", null, new { @class = "btn btn-danger" })
                    <button class="btn btn-dark">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}